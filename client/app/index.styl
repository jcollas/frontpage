@import "lib"

:root
	--bg-color #f5eddd
	--text-color #333
	--border-color #666

@media (prefers-color-scheme: dark)
	:root
		--bg-color #222
		--text-color #e0e0e0
		--border-color #888


body
	margin 0
	padding 0
	font 100 14px/1.4 Georgia, 'Times New Roman', Times, serif
	box-sizing border-box
	background var(--bg-color)
	color var(--text-color)

	*
		box-sizing inherit

hr
	height 0
	margin 10 40
	border 1px solid var(--border-color)
	border-width 1px 0 0

a
	color inherit
	padding 1 3
	margin -1 -3
	border-radius 4px
	position relative
	&:hover
		background var(--text-color)
		color var(--bg-color)
		z-index 9
